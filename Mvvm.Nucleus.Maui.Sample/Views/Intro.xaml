<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mvvm.Nucleus.Maui.Sample"
             x:Class="Mvvm.Nucleus.Maui.Sample.Intro"
             x:DataType="local:IntroViewModel"
             Title="Intro">

    <VerticalStackLayout
        Spacing="10"
        Margin="40">

        <Label 
            Text="Welcome to Nucleus.Mvvm"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Style="{StaticResource Headline}" />

        <Label
            Text="This sample app shows the basic usage of Nucleus.Mvvm features, such as navigation. See for more information the Github repository." />

        <ContentView />

        <Button
            Text="Start App"
            Command="{Binding StartAppCommand}"/>

    </VerticalStackLayout>

</ContentPage>