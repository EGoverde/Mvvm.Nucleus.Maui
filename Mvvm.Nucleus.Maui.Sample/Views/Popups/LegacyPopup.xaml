<?xml version="1.0" encoding="utf-8" ?>
<compatibility:CommunityToolkitV1Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mvvm.Nucleus.Maui.Sample"
             xmlns:compatibility="clr-namespace:Mvvm.Nucleus.Maui.Compatibility;assembly=Mvvm.Nucleus.Maui"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             x:Class="Mvvm.Nucleus.Maui.Sample.LegacyPopup"
             x:DataType="local:LegacyPopupViewModel"
             Color="DarkGray"
             Size="350,200">

    <Grid>

        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <Button
                Text="Close using IPopupService"
                Command="{Binding CloseUsingServiceCommand}"
                CommandParameter="Closed using IPopupService."
                Margin="20,0,20,20" />

            <Button
                Text="Close using IPopupAware"
                Command="{Binding CloseUsingPopupAwareCommand}"
                CommandParameter="Closed using IPopupAware."
                Margin="20,0,20,20" />

        </VerticalStackLayout>

    </Grid>

</compatibility:CommunityToolkitV1Popup>