<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mvvm.Nucleus.Maui.Sample"
             xmlns:compatibility="clr-namespace:Mvvm.Nucleus.Maui.Compatibility;assembly=Mvvm.Nucleus.Maui"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             x:Class="Mvvm.Nucleus.Maui.Sample.SingletonPopup"
             x:DataType="local:SingletonPopupViewModel">

    <VerticalStackLayout>

        <Label
            Text="{Binding PopupState, StringFormat='State: {0}'}"
            TextColor="Black"
            Margin="20"/>

        <Label
            Text="{Binding InstanceValue, StringFormat='Value: {0}'}"
            TextColor="Black"
            Margin="20"/>

        <Button
            Text="Set Value"
            Command="{Binding SetValueCommand}"
            Margin="20,0,20,20" />

        <Button
            Text="Close Popup"
            Command="{Binding CloseCommand}"
            Margin="20,0,20,20" />

    </VerticalStackLayout>

</ContentView>