<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mvvm.Nucleus.Maui.Sample"
             x:Class="Mvvm.Nucleus.Maui.Sample.HelpTab"
             x:DataType="local:HelpTabViewModel"
             Title="Help">
    
    <VerticalStackLayout
        Spacing="10"
        Margin="40">

        <Label 
            Text="Nucleus.Mvvm Help"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Style="{StaticResource Headline}" />

        <Label
            Text="This sample app will be expanded upon in the future when new features are added to Nucleus.Mvvm." />

    </VerticalStackLayout>
    
</ContentPage>